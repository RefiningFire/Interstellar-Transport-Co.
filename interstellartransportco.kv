
#:import hex kivy.utils.get_color_from_hex
#:import sp kivy.metrics.sp

#:set color_firefly hex('#08111E')
#:set color_submarine hex('#B6BFC2')
#:set color_shakespeare hex('#62B2D7')
#:set color_san_marino hex('#4774A2')

<NewButton>:
    font_size: 30
    color: color_shakespeare
    background_color: 0, 0, 0, 0
    canvas.before:
        Color:
            rgba: color_san_marino if self.state=='normal' else color_firefly
        RoundedRectangle:
            pos: self.pos
            size: self.size
            radius: [40, ]

<MarketButton>:
    color: color_shakespeare
    background_color: 0, 0, 0, 0
    on_press: print(f'{self.text} pressed')
    size_hint_x: None
    width: 240
    canvas.before:
        Color:
            rgba: color_san_marino if self.state=='normal' else color_firefly
        RoundedRectangle:
            pos: self.pos
            size: self.size
            radius: [10, ]

<PlusButton>:
    color: color_shakespeare
    background_color: 0, 0, 0, 0
    text: '+'
    size_hint_x: None
    width: 80
    on_press: self.make_transaction(self.parent.children[3].text, self.text)
    canvas.before:
        Color:
            rgba: color_san_marino if self.state=='normal' else color_firefly
        RoundedRectangle:
            pos: self.pos
            size: self.size
            radius: [10, ]

<MinusButton>:
    color: color_shakespeare
    background_color: 0, 0, 0, 0
    text: '-'
    size_hint_x: None
    width: 80
    on_press: self.make_transaction(self.parent.children[3].text, self.text)
    canvas.before:
        Color:
            rgba: color_san_marino if self.state=='normal' else color_firefly
        RoundedRectangle:
            pos: self.pos
            size: self.size
            radius: [10, ]

<PlayerStatButton>:
    color: color_shakespeare
    background_color: 0, 0, 0, 0
    on_press: print(f'{self.text} pressed')
    canvas.before:
        Color:
            rgba: color_san_marino if self.state=='normal' else color_firefly
        RoundedRectangle:
            pos: self.pos
            size: self.size
            radius: [10, ]

<PlayerStats>:
    id: player_stats
    orientation: 'vertical'
    size_hint: None, None
    size: 1000, 100
    pos_hint: {'top':1,'right':1}


    BoxLayout:
        canvas:
            Color:
                rgba: color_submarine
            RoundedRectangle:
                size: self.size
                radius: [0, 0, 0, 25 ]
        orientation: 'horizontal'
        spacing: 20
        padding: 10
        PlayerStatButton:
            text: '>'
            size_hint_x: None
            size: 50, self.height
            on_press: self.expand_contract()
        BoxLayout:
            orientation: 'vertical'
            Label:
                text: 'Credits'
                color: color_shakespeare
            PlayerStatButton:
                id: player_credits
                text: '100'
        BoxLayout:
            orientation: 'vertical'
            Label:
                text: 'stat2'
                color: color_shakespeare
            PlayerStatButton:
                id: player_stats2
                text: 'stat 2'
        BoxLayout:
            orientation: 'vertical'
            Label:
                text: 'stat3'
                color: color_shakespeare
            PlayerStatButton:
                id: player_stats3
                text: 'stat 3'
        BoxLayout:
            orientation: 'vertical'
            Label:
                text: 'stat4'
                color: color_shakespeare
            PlayerStatButton:
                id: player_stats4
                text: 'stat 4'


<MyScreenManager>:
    MarketScreen:

<MarketScreen>:
    on_pre_enter:
        self.add_buttons(self.planets[0].market_goods)


    canvas:
        Color:
            rgba: color_firefly
        Rectangle:
            size: self.size
    FloatLayout:
        id: background
        RelativeLayout:
            size_hint: None, None
            size: 1200, 1200
            pos_hint: {'center_x':0.5,'center_y':0.5}
            canvas:
                Color:
                    rgba: color_submarine
                RoundedRectangle:
                    size: self.size
                    radius: [30, 30, 30, 30]

            BoxLayout:
                id: commodity_list
                orientation: 'vertical'
                size_hint: None, None
                size: self.parent.width - 40, root.children_count
                pos: (self.parent.width / 2) - (self.width / 2), 300
                spacing: 20
        PlayerStats:


<MenuScreen>:
    canvas:
        Color:
            rgba: color_firefly
        Rectangle:
            size: self.size
    RelativeLayout:
        size_hint: None, None
        size: self.parent.width - 40, 150
        pos: 20, self.parent.height - 150 - 20
        canvas:
            Color:
                rgba: color_submarine
            Rectangle:
                size: self.size
        BoxLayout:
            padding: [10, 10, 10, 10]
            spacing: 20
            NewButton:
                text: 'Settings Screen'
                on_press:
                    root.manager.transition.direction = 'left'
                    root.manager.transition.duration = 0.6
                    root.manager.current = 'settings'
            NewButton:
                text: 'NewButton2'
            NewButton:
                text: 'NewButton3'
            NewButton:
                text: 'NewButton4'

<SettingsScreen>:
    canvas:
        Color:
            rgba: color_firefly
        Rectangle:
            size: self.size
    AnchorLayout:
        anchor: 'center'
        RelativeLayout:
            size_hint: None, None
            size: 600, 1200
            canvas:
                Color:
                    rgba: color_submarine
                Rectangle:
                    size: self.size
            BoxLayout:
                orientation: 'vertical'
                size_hint: None, None
                size: 400, 400
                pos: (self.parent.width / 2) - (self.width / 2), 0
                padding: [0, 0, 0, 10]
                spacing: 20
                Label:
                    text: 'Settings Screen'
                    color: color_firefly
                NewButton:
                    text: 'Menu'
                    on_press:
                        root.manager.transition.direction = 'right'
                        root.manager.transition.duration = 0.6
                        root.manager.current = 'menu'
                NewButton:
                    text: 'NewButton2'
                NewButton:
                    text: 'NewButton3'
                NewButton:
                    text: 'NewButton4'
