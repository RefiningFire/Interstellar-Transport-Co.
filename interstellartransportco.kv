
#:import hex kivy.utils.get_color_from_hex
#:import sp kivy.metrics.sp

#:set color_firefly hex('#08111E')
#:set color_submarine hex('#B6BFC2')
#:set color_shakespeare hex('#62B2D7')
#:set color_san_marino hex('#4774A2')

<NewButton>:
    font_size: 30
    color: color_shakespeare
    background_color: 0, 0, 0, 0
    canvas.before:
        Color:
            rgba: color_san_marino if self.state=='normal' else color_firefly
        RoundedRectangle:
            pos: self.pos
            size: self.size
            radius: [40, ]

<MarketButton>:
    color: color_shakespeare
    background_color: 0, 0, 0, 0
    on_press: print(f'{self.text} pressed')
    canvas.before:
        Color:
            rgba: color_san_marino if self.state=='normal' else color_firefly
        RoundedRectangle:
            pos: self.pos
            size: self.size
            radius: [10, ]

<BuyButton>:
    color: color_shakespeare
    background_color: 0, 0, 0, 0
    size_hint_x: None
    width: 140
    canvas.before:
        Color:
            rgba: color_san_marino if self.state=='normal' else color_firefly
        RoundedRectangle:
            pos: self.pos
            size: self.size
            radius: [10, ]

<Buy100>:
    on_press: self.make_transaction(self.parent.children[3].text, self.text, 100)

<BuyTen>:
    on_press: self.make_transaction(self.parent.children[3].text, self.text, 10)

<BuyOne>:
    on_press: self.make_transaction(self.parent.children[3].text, self.text, 1)

<SellButton>:
    color: color_shakespeare
    background_color: 0, 0, 0, 0
    text: '-'
    size_hint_x: None
    width: 140
    canvas.before:
        Color:
            rgba: color_san_marino if self.state=='normal' else color_firefly
        RoundedRectangle:
            pos: self.pos
            size: self.size
            radius: [10, ]

<Sell100>:
    on_press: self.make_transaction(self.parent.children[3].text, self.text, -100)

<SellTen>:
    on_press: self.make_transaction(self.parent.children[3].text, self.text, -10)

<SellOne>:
    on_press: self.make_transaction(self.parent.children[3].text, self.text, -1)

<BuySellLabel>:
    color: color_san_marino
    background_color: 0, 0, 0, 0
    font_size: 30
    text: ''
    size_hint_x: None
    width: 140


<PlayerStatButton>:
    color: color_shakespeare
    background_color: 0, 0, 0, 0
    canvas.before:
        Color:
            rgba: color_san_marino if self.state=='normal' else color_firefly
        RoundedRectangle:
            pos: self.pos
            size: self.size
            radius: [10, ]

<MyScreenManager>:
    MarketScreen:

<MarketScreen>:
    on_pre_enter:
        self.add_buttons(app.planets[0])
    canvas:
        Color:
            rgba: color_firefly
        Rectangle:
            size: self.size
    FloatLayout:
        id: background
        RelativeLayout:
            size_hint: None, None
            size: 1200, 1200
            pos_hint: {'center_x':0.5,'center_y':0.5}
            canvas:
                Color:
                    rgba: color_submarine
                RoundedRectangle:
                    size: self.size
                    radius: [30, 30, 30, 30]

            BoxLayout:
                id: commodity_list
                orientation: 'vertical'
                size_hint: None, None
                size: self.parent.width - 40, root.children_count
                pos: (self.parent.width / 2) - (self.width / 2), 300
                spacing: 20
        RelativeLayout:
            id: player_stats
            orientation: 'vertical'
            size_hint: None, None
            size: 750, 100
            pos_hint: {'top':1,'right':1}
            BoxLayout:
                canvas:
                    Color:
                        rgba: color_submarine
                    RoundedRectangle:
                        size: self.size
                        radius: [0, 0, 0, 25 ]
                orientation: 'horizontal'
                spacing: 20
                padding: 10
                PlayerStatButton:
                    text: '>'
                    size_hint_x: None
                    size: 50, self.height
                    on_press: self.expand_contract_bar()
                BoxLayout:
                    orientation: 'vertical'
                    Label:
                        text: 'Credits'
                        color: color_shakespeare
                    PlayerStatButton:
                        id: player_credits
                        text: str(app.player_stats['credits'])
                BoxLayout:
                    orientation: 'vertical'
                    Label:
                        text: 'stat3'
                        color: color_shakespeare
                    PlayerStatButton:
                        id: player_stats3
                        text: 'stat 3'
                BoxLayout:
                    orientation: 'vertical'
                    Label:
                        text: 'stat4'
                        color: color_shakespeare
                    PlayerStatButton:
                        id: player_stats4
                        text: 'stat 4'
        BoxLayout:
            orientation: 'vertical'
            size_hint: None, None
            pos_hint: {'top':1,'left':1}
            spacing: 20
            padding: 10
            canvas:
                Color:
                    rgba: color_san_marino
                RoundedRectangle:
                    pos: self.pos
                    size: self.size
                    radius: [0, 0, 25, 0]
            Label:
                text: 'Cargo'
                font_size: 50
                color: color_shakespeare
            Label:
                text: 'Type: Used/Capacity'
                color: color_shakespeare
            Label:
                id: player_cargo
                color: color_shakespeare
                text: 'total: ' + str(app.player_stats['cargo_used']) + '/' + str(app.player_stats['cargo_capacity'])
        BoxLayout:
            orientation: 'vertical'
            size_hint: (.25,.08)
            pos_hint: {'top':1, 'center_x':0.5}
            spacing: 20
            padding: 10
            canvas:
                Color:
                    rgba: color_san_marino
                RoundedRectangle:
                    pos: self.pos
                    size: self.size
                    radius: [0, 0, 25, 25]
            Label:
                id: earth_standard_time
                text: 'Earth Standard Time: ' + str(app.earth_clock)
                color: color_shakespeare
            Label:
                id: local_planet_time
                text: 'Local Planet Time: ' + str(app.local_clock)
                color: color_shakespeare
            Label:
                id: local_planet_range
                text: 'Testing'
                color: color_shakespeare
            Label:
                id: local_time_of_day
                text: str(app.local_season) + ',      ' + str(app.local_TOD)
                color: color_shakespeare

<MenuScreen>:
    canvas:
        Color:
            rgba: color_firefly
        Rectangle:
            size: self.size
    RelativeLayout:
        size_hint: None, None
        size: self.parent.width - 40, 150
        pos: 20, self.parent.height - 150 - 20
        canvas:
            Color:
                rgba: color_submarine
            Rectangle:
                size: self.size
        BoxLayout:
            padding: [10, 10, 10, 10]
            spacing: 20
            NewButton:
                text: 'Settings Screen'
                on_press:
                    root.manager.transition.direction = 'left'
                    root.manager.transition.duration = 0.6
                    root.manager.current = 'settings'
            NewButton:
                text: 'NewButton2'
            NewButton:
                text: 'NewButton3'
            NewButton:
                text: 'NewButton4'

<SettingsScreen>:
    canvas:
        Color:
            rgba: color_firefly
        Rectangle:
            size: self.size
    AnchorLayout:
        anchor: 'center'
        RelativeLayout:
            size_hint: None, None
            size: 600, 1200
            canvas:
                Color:
                    rgba: color_submarine
                Rectangle:
                    size: self.size
            BoxLayout:
                orientation: 'vertical'
                size_hint: None, None
                size: 400, 400
                pos: (self.parent.width / 2) - (self.width / 2), 0
                padding: [0, 0, 0, 10]
                spacing: 20
                Label:
                    text: 'Settings Screen'
                    color: color_firefly
                NewButton:
                    text: 'Menu'
                    on_press:
                        root.manager.transition.direction = 'right'
                        root.manager.transition.duration = 0.6
                        root.manager.current = 'menu'
                NewButton:
                    text: 'NewButton2'
                NewButton:
                    text: 'NewButton3'
                NewButton:
                    text: 'NewButton4'
